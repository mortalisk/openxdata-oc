        <dependency>
            <groupId>org.openxdata.gwt</groupId>
            <artifactId>openxdata-gwt-sharedlib</artifactId>
            <version>${project.version}</version>
            <type>jar</type>
            <scope>provided</scope>
        </dependency>
        <dependency>


<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <groupId>org.openxdata</groupId>
        <artifactId>oxd</artifactId>
        <version>1.3-SNAPSHOT</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <artifactId>openxdata</artifactId>
    <packaging>war</packaging>
    <name>OpenXdata</name>
    <url>http://openxdata.org</url>

    <properties>
        <emit.gwt.module>org.openxdata.EmitFirefox</emit.gwt.module>
        <openxdata.gwt.module>org.openxdata.server.admin.OpenXDataServerAdminFirefox</openxdata.gwt.module>
        <name>OpenXdata</name>
        <brandKey>openxdata</brandKey>
        <logo>images/emit/openxdata-logo.png</logo>
        <logoUrl>http://www.openxdata.org/</logoUrl>
    </properties>

    <profiles>
        <profile>
            <id>prod</id>
            <activation>
                <property>
                    <name>env</name>
                    <value>prod</value>
                </property>
            </activation>
            <properties>
                <emit.gwt.module>org.openxdata.Emit</emit.gwt.module>
                <openxdata.gwt.module>org.openxdata.server.admin.OpenXDataServerAdmin</openxdata.gwt.module>
            </properties>
        </profile>
        <profile>
            <id>emit</id>
            <activation>
                <property>
                    <name>brand</name>
                    <value>emit</value>
                </property>
            </activation>
            <properties>
                <name>EMIT</name>
                <brandKey>emit</brandKey>
                <logo>images/emit/EMIT_logo_small_TRANS.png</logo>
                <logoUrl>http://www.emitmobile.co.za/</logoUrl>
            </properties>
        </profile>
    </profiles>

    <dependencies>
        <dependency>
            <groupId>org.openxdata</groupId>
            <artifactId>model</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.openxdata</groupId>
            <artifactId>server</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.openxdata</groupId>
            <artifactId>rpc-interface</artifactId>
            <version>${project.version}</version>
        </dependency>

        <!-- Source code for the GWT compiler -->
        <dependency>
            <groupId>org.openxdata</groupId>
            <artifactId>model</artifactId>
            <version>${project.version}</version>
            <classifier>sources</classifier>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.openxdata</groupId>
            <artifactId>server</artifactId>
            <version>${project.version}</version>
            <classifier>sources</classifier>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.openxdata</groupId>
            <artifactId>rpc-interface</artifactId>
            <version>${project.version}</version>
            <classifier>sources</classifier>
            <scope>provided</scope>
        </dependency>
        
        <dependency>
            <groupId>com.google.gwt</groupId>
            <artifactId>gwt-servlet</artifactId>
            <version>${gwt.version}</version>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>com.google.gwt</groupId>
            <artifactId>gwt-user</artifactId>
            <version>${gwt.version}</version>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring</artifactId>
            <version>${spring.version}</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>org.springframework.security</groupId>
            <artifactId>spring-security-core</artifactId>
            <version>2.0.5.RELEASE</version>
            <type>jar</type>
            <exclusions>
                <exclusion>
                    <artifactId>spring-core</artifactId>
                    <groupId>org.springframework</groupId>
                </exclusion>
                <exclusion>
